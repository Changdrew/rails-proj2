

<h1>Upcoming Events</h1>

<% @events.first(10).each do |event| %>
  <h3>
    <strong> <%= link_to event.title, event %> </strong>
  </h3>

  <p>
    <%= event.date.strftime("%B %d, %Y")  %>
    <%= event.time.strftime("%I:%M %p") %>
  </p>  

  <p>
    <%= event.address %>
  </p>

  <p>
    Description: <%= event.description %>
  </p>
<% end %>





